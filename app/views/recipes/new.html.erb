<h1>Cadastro de receitas</h1>
<% if flash[:error]  %>
  <p><%= flash[:error] %></p>
<% end %>

<%= simple_form_for @recipe do |f| %>
  <%= f.input :recipe_name, label: 'Nome da receita' %>
  <%= f.association :kitchen, label: 'Cozinha', prompt:'Selecione uma empresa' %>
  <%= f.input :kind_food, label: 'Tipo de comida' %>
  <%= f.input :how_many_people_serve, label: 'Quantas pessoas serve' %>
  <%= f.input :preparation_time, label: 'Tempo de preparo' %>
  <%= f.input :difficulty_level, label: 'NÃ­vel de dificuldade' %>
  <%= f.input :ingredients, label: 'Ingredientes' %>
  <%= f.input :step_by_step, label: 'Passo a passo' %>
  <%= f.submit 'Cadastrar Receita', class: 'btn btn-primary'%>
<% end %>
